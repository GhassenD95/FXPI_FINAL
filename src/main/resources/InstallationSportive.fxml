<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InstallationSportiveController">
    <top>
        <Label text="Gestion des Installations Sportives" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="typeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Adresse:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="adresseField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Capacité:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="capaciteField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Disponible:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <CheckBox fx:id="disponibleCheckBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Image URL:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="imageField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAdd"/>
                <Button text="Modifier" onAction="#handleEdit"/>
                <Button text="Supprimer" onAction="#handleDelete"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <TableView fx:id="installationTable">
            <columns>
                <TableColumn text="Nom" fx:id="nomColumn"/>
                <TableColumn text="Type" fx:id="typeColumn"/>
                <TableColumn text="Adresse" fx:id="adresseColumn"/>
                <TableColumn text="Capacité" fx:id="capaciteColumn"/>
                <TableColumn text="Disponible" fx:id="disponibleColumn"/>
            </columns>
        </TableView>
    </bottom>
</BorderPane>
