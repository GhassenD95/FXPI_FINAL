                <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom" />
                <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                <TableColumn fx:id="adresseColumn" prefWidth="150.0" text="Adresse" />
                <TableColumn fx:id="capaciteColumn" prefWidth="150.0" text="Capacité" />
                <TableColumn fx:id="disponibleColumn" prefWidth="150.0" text="Disponible" />
            </columns>
        </TableView>

        <!-- Include Home Button -->
        <fx:include source="HomeButton.fxml" />
    </children>
