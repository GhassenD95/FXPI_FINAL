        <!-- Background Image -->
        <ImageView fitHeight="556.0" fitWidth="945.0" pickOnBounds="true">
            <image>
                <Image url="@images/crud.jpg" />
            </image>
        </ImageView>

        <!-- Title -->
        <Text fill="#043873" layoutX="72.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestion des Installations Sportives" wrappingWidth="265.70770263671864">
            <font>
                <Font name="Arial Bold" size="17.0" />
            </font>
        </Text>

        <!-- Input Fields for Installation Details -->
        <TextField fx:id="nomField" layoutX="72.0" layoutY="79.0" prefHeight="25.0" prefWidth="224.0" promptText="Nom" />
        <ComboBox fx:id="typeComboBox" layoutX="72.0" layoutY="113.0" prefHeight="25.0" prefWidth="224.0" promptText="Type" />
        <TextField fx:id="adresseField" layoutX="72.0" layoutY="147.0" prefHeight="25.0" prefWidth="224.0" promptText="Adresse" />
        <TextField fx:id="capaciteField" layoutX="72.0" layoutY="181.0" prefHeight="25.0" prefWidth="224.0" promptText="Capacité" />
        <CheckBox fx:id="disponibleCheckBox" layoutX="72.0" layoutY="215.0" text="Disponible" />
        <TextField fx:id="imageField" layoutX="72.0" layoutY="249.0" prefHeight="25.0" prefWidth="224.0" promptText="Image URL" />

        <!-- Action Buttons -->
        <Button fx:id="AddButton" layoutX="72.0" layoutY="290.0" onAction="#handleAdd" styleClass="buttonADD" stylesheets="@css/styling.css" text="Ajouter" />
