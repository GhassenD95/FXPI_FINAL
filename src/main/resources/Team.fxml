<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.TeamController"
            style="-fx-background-color: #f4f4f4;">

    <children>
        <VBox spacing="20" layoutX="20" layoutY="20" style="-fx-padding: 20;">
            <!-- Titre -->
            <Label text="Gestion des Teams" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Formulaire de saisie -->
            <GridPane hgap="15" vgap="10">
                <!-- Nom -->
                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" promptText="Nom du Team"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Division -->
                <Label text="Division:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="divisionCombo" promptText="Choisir Division"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Sport -->
                <Label text="Sport:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="sportCombo" promptText="Choisir Sport"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Coach -->
                <Label text="Coach:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="coachCombo" promptText="SÃ©lectionner un Coach"
                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Boutons CRUD -->
            <HBox spacing="15">
                <Button text="Add Team" onAction="#addTeam"/>
                <Button text="Update Team" onAction="#updateTeam"/>
                <Button text="Delete Team" onAction="#deleteTeam"/>
            </HBox>

            <!-- Table des Teams -->
            <TableView fx:id="teamTable">
                <columns>
                    <TableColumn fx:id="colId" text="ID" minWidth="50"/>
                    <TableColumn fx:id="colNom" text="Nom" minWidth="100"/>
                    <TableColumn fx:id="colDivision" text="Division" minWidth="100"/>
                    <TableColumn fx:id="colCoach" text="Coach (ID)" minWidth="80"/>
                    <TableColumn fx:id="colSport" text="Sport" minWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
