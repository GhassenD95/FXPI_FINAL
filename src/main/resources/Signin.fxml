<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="407.0" prefWidth="770.0" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #e1e1e1);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignInController">

    <children>
        <ImageView fitHeight="556.0" fitWidth="945.0" pickOnBounds="true">
            <image>
                <Image url="@images/crud.jpg" />
            </image>
        </ImageView>
        <ImageView fitHeight="477.0" fitWidth="615.0" layoutX="166.0" layoutY="53.0" pickOnBounds="true">
            <image>
                <Image url="@images/Card.png" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" layoutX="280.0" layoutY="62.0" spacing="20" style="-fx-padding: 40;">
            <!-- Title / Logo Area -->
            <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" text="Welcome!" textFill="#09235b" />

            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #fff; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Sign In to Your Account" />

                <TextField fx:id="emailField" prefWidth="250" promptText="Email" />
                <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" />

                <Button onAction="#handleSignIn" prefHeight="26.0" prefWidth="177.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Sign In" />

                <!-- Error / Info Label -->
                <Label fx:id="errorLabel" style="-fx-font-size: 12px;" textFill="red" />

                <Hyperlink fx:id="signUpLink" onAction="#handleSignUpLink" style="-fx-font-size: 12px;" text="Don't have an account? Sign up here" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
