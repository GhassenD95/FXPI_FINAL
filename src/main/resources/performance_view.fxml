<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PerformanceAthleteController"
      spacing="10"
      style="-fx-background-color: #f0f0f0;">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="retourButton" 
                text="Retour à l'accueil"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Label text="Gestion des Performances"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>
    
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

    <!-- Boutons -->
    <HBox spacing="10">
        <Button text="Ajouter une Performance" onAction="#ajouterPerformance"/>
        <Button text="Modifier" onAction="#modifierPerformance"/>
        <Button text="Supprimer" onAction="#supprimerPerformance"/>
    </HBox>

    <!-- TableView -->
    <TableView fx:id="performanceTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="athleteColumn" text="Athlète" prefWidth="150"/>
            <TableColumn fx:id="matchColumn" text="Match" prefWidth="150"/>
            <TableColumn fx:id="minutesColumn" text="Minutes" prefWidth="80"/>
            <TableColumn fx:id="butsColumn" text="Buts" prefWidth="80"/>
            <TableColumn fx:id="passesColumn" text="Passes" prefWidth="80"/>
            <TableColumn fx:id="tirsColumn" text="Tirs" prefWidth="80"/>
            <TableColumn fx:id="interceptionsColumn" text="Interceptions" prefWidth="100"/>
            <TableColumn fx:id="fautesColumn" text="Fautes" prefWidth="80"/>
            <TableColumn fx:id="jaunesColumn" text="Jaunes" prefWidth="80"/>
            <TableColumn fx:id="rougesColumn" text="Rouges" prefWidth="80"/>
            <TableColumn fx:id="rebondsColumn" text="Rebonds" prefWidth="80"/>
        </columns>
    </TableView>
</VBox>
