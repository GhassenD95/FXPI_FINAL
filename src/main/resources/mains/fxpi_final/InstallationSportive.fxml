<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.InstallationSportiveController"
      alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600">

    <!-- Titre -->
    <Label text="Gestion des Installations Sportives" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Formulaire -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" />
            <ColumnConstraints halignment="CENTER" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
        </rowConstraints>
        <children>
            <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Type d'installation :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="typeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Manager :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="managerField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Adresse :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="adresseField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Capacité :" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="capaciteField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Disponible :" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <CheckBox fx:id="disponibleCheckBox" GridPane.rowIndex="5" GridPane.columnIndex="1" />

            <Label text="URL de l'image :" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <TextField fx:id="imageUrlField" GridPane.rowIndex="6" GridPane.columnIndex="1" />
        </children>
    </GridPane>

    <!-- Boutons -->
    <HBox spacing="10" alignment="CENTER">
        <children>
            <Button fx:id="addButton" text="Ajouter" onAction="#handleAdd"/>
            <Button fx:id="editButton" text="Modifier" onAction="#handleEdit"/>
            <Button fx:id="deleteButton" text="Supprimer" onAction="#handleDelete"/>
        </children>
    </HBox>

    <!-- TableView -->
    <TableView fx:id="installationSportiveTable" prefWidth="500" prefHeight="200">
        <columns>
            <TableColumn text="Nom" fx:id="nomColumn"/>
            <TableColumn text="Type" fx:id="typeColumn"/>
            <TableColumn text="Manager" fx:id="managerColumn"/>
            <TableColumn text="Adresse" fx:id="adresseColumn"/>
            <TableColumn text="Capacité" fx:id="capaciteColumn"/>
            <TableColumn text="Disponible" fx:id="disponibleColumn"/>
            <TableColumn text="URL Image" fx:id="imageUrlColumn"/>
        </columns>
    </TableView>

</VBox>

