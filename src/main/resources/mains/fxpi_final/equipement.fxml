<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.EquipementController"
      alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600">

    <!-- Titre -->
    <Label text="Gestion des Équipements" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Formulaire -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" />
            <ColumnConstraints halignment="CENTER" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" />
            <RowConstraints valignment="CENTER" />
        </rowConstraints>
        <children>
            <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Description :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextArea fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="État :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="etatComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Type :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="typeComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Quantité :" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="quantiteField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
        </children>
    </GridPane>

    <!-- Boutons -->
    <HBox spacing="10" alignment="CENTER">
        <children>
            <Button fx:id="addButton" text="Ajouter" onAction="#handleAdd"/>
            <Button fx:id="editButton" text="Modifier" onAction="#handleEdit"/>
            <Button fx:id="deleteButton" text="Supprimer" onAction="#handleDelete"/>
        </children>
    </HBox>

    <!-- TableView -->
    <TableView fx:id="equipementTable" prefWidth="500" prefHeight="200">
        <columns>
            <TableColumn text="Nom" fx:id="nomColumn"/>
            <TableColumn text="Description" fx:id="descriptionColumn"/>
            <TableColumn text="État" fx:id="etatColumn"/>
            <TableColumn text="Type" fx:id="typeColumn"/>
            <TableColumn text="Quantité" fx:id="quantiteColumn"/>
        </columns>
    </TableView>

</VBox>
