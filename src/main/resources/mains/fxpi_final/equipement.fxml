<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EquipementController" hgap="10" vgap="10">
    <columns>
        <ColumnConstraints halignment="CENTER" />
        <ColumnConstraints halignment="CENTER" />
    </columns>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <!-- Label and TextField for the equipment name -->
    <Label text="Nom" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <!-- Label and TextArea for the description -->
    <Label text="Description" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextArea fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Label and ComboBox for the equipment state -->
    <Label text="État" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="etatComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Label and ComboBox for the equipment type -->
    <Label text="Type" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="typeComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Label and TextField for the quantity -->
    <Label text="Quantité" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="quantiteField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Buttons for add, edit, delete -->
    <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
        <Button text="Ajouter" fx:id="addButton" onAction="#handleAdd"/>
        <Button text="Modifier" fx:id="editButton" onAction="#handleEdit"/>
        <Button text="Supprimer" fx:id="deleteButton" onAction="#handleDelete"/>
    </HBox>

    <!-- TableView to display the list of Equipments -->
    <Label text="Liste des équipements" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TableView fx:id="equipementTable" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <TableColumn text="Nom" fx:id="nomColumn" />
        <TableColumn text="Description" fx:id="descriptionColumn" />
        <TableColumn text="État" fx:id="etatColumn" />
        <TableColumn text="Type" fx:id="typeColumn" />
        <TableColumn text="Quantité" fx:id="quantiteColumn" />
    </TableView>
</GridPane>
