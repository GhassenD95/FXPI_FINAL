<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="62.0" prefWidth="197.0" spacing="10" styleClass="sidebar" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NavigationController">

    <!-- Logo Image -->
    <ImageView fitHeight="87.0" fitWidth="134.0" pickOnBounds="true">
        <image>
            <Image url="@images/Logo.png" />
        </image>
    </ImageView>

    <!-- Navigation Buttons -->
    <Button fx:id="navUserButton" onAction="#navigateToUsers" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Users" textAlignment="CENTER" />
    <Button fx:id="navTournoisButton" onAction="#navigateToTournois" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Tournois" textAlignment="CENTER" />
    <Button fx:id="navTeamsButton" onAction="#navigateToTeams" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Teams" textAlignment="CENTER" />
    <Button fx:id="navMatchButton" onAction="#navigateToMatches" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Matches" textAlignment="CENTER" />
    <Button fx:id="navEquipementButton" onAction="#navigateToEquipement" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Equipement" textAlignment="CENTER" />
    <Button fx:id="navInstallationsButton" onAction="#navigateToInstallations" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Installations" textAlignment="CENTER" />
    <Button fx:id="navPerformanceButton" onAction="#navigateToPerformances" prefHeight="41.0" prefWidth="170.0" styleClass="buttonADD" stylesheets="@css/styling.css" text="Performance equipes" textAlignment="CENTER" />

</VBox>